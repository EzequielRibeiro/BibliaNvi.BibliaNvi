<?xml version="1.0" encoding="utf-8"?><!-- A RecyclerView with some commonly used attributes -->


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textViewChapVers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerview_chapter"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
